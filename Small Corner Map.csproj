<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <RootNamespace>Small_Corner_Map</RootNamespace>
    <LangVersion>latest</LangVersion>
    <IsPackable>false</IsPackable>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <!-- <NeutralLanguage>en-US</NeutralLanguage> -->
    <AssemblyName>Small_Corner_Map</AssemblyName>
    <Platforms>AnyCPU;x64</Platforms>
    <Configurations>IL2CPP;Mono</Configurations>
  </PropertyGroup>


  <ItemGroup Condition="'$(Configuration)' == 'IL2CPP'">
    <Reference Include="Assembly-CSharp">
      <HintPath>..\..\Assemblies\IL2CPP\Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="Il2CppFishNet.Runtime">
      <HintPath>..\..\Assemblies\IL2CPP\Il2CppFishNet.Runtime.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>..\..\Assemblies\IL2CPP\UnityEngine.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.InputLegacyModule">
      <HintPath>..\..\Assemblies\IL2CPP\UnityEngine.InputLegacyModule.dll</HintPath>
    </Reference>
    <Reference Include="0Harmony">
      <HintPath>..\..\Assemblies\IL2CPP\0Harmony.dll</HintPath>
    </Reference>
    <Reference Include="Il2Cppmscorlib">
      <HintPath>..\..\Assemblies\IL2CPP\Il2Cppmscorlib.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..\..\Assemblies\IL2CPP\UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>..\..\Assemblies\IL2CPP\UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>..\..\Assemblies\IL2CPP\UnityEngine.UI.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UIModule">
      <HintPath>..\..\Assemblies\IL2CPP\UnityEngine.UIModule.dll</HintPath>
    </Reference>
    <Reference Include="S1API">
      <HintPath>..\..\Assemblies\IL2CPP\S1API.Il2Cpp.MelonLoader.dll</HintPath>
    </Reference>
    <Reference Include="Il2CppInterop.Runtime">
      <HintPath>..\..\Assemblies\IL2CPP\Il2CppInterop.Runtime.dll</HintPath>
    </Reference>
  </ItemGroup>


  <ItemGroup Condition="'$(Configuration)' == 'Mono'">
    <Reference Include="Assembly-CSharp">
      <HintPath>..\..\Assemblies\Mono\Assembly-CSharp.dll</HintPath>
    </Reference>
    <Reference Include="0Harmony">
      <HintPath>..\..\Assemblies\Mono\0Harmony.dll</HintPath>
    </Reference>
    <Reference Include="MelonLoader">
      <HintPath>..\..\Assemblies\Mono\MelonLoader.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine">
      <HintPath>..\..\Assemblies\Mono\UnityEngine.dll</HintPath>
    </Reference>
    <Reference Include="S1API">
      <HintPath>..\..\Assemblies\Mono\S1API.Mono.MelonLoader.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.CoreModule">
      <HintPath>..\..\Assemblies\Mono\UnityEngine.CoreModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.TextRenderingModule">
      <HintPath>..\..\Assemblies\Mono\UnityEngine.TextRenderingModule.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UI">
      <HintPath>..\..\Assemblies\Mono\UnityEngine.UI.dll</HintPath>
    </Reference>
    <Reference Include="UnityEngine.UIModule">
      <HintPath>..\..\Assemblies\Mono\UnityEngine.UIModule.dll</HintPath>
    </Reference>
    <Reference Include="FishNet.Runtime">
      <HintPath>..\..\Assemblies\Mono\FishNet.Runtime.dll</HintPath>
    </Reference>
  </ItemGroup>


  <PropertyGroup>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>


  <ItemGroup>
    <Compile Include="Core.cs" />
    <Compile Include="Helpers\Constants.cs" />
    <Compile Include="Helpers\MapPreferences.cs" />
    <Compile Include="Helpers\MinimapPoIHelper.cs" />
    <Compile Include="Helpers\MinimapUIFactory.cs" />
    <Compile Include="Helpers\Utils.cs" />
    <Compile Include="Main\ContractMarkerManager.cs" />
    <Compile Include="Main\MinimapContent.cs" />
    <Compile Include="Main\MinimapTimeDisplay.cs" />
    <Compile Include="Main\MinimapUI.cs" />
    <Compile Include="Main\MultiplayerManager.cs" />
    <Compile Include="Main\PlayerMarkerManager.cs" />
    <Compile Include="Main\PropertyPoIManager.cs" />
  </ItemGroup>


  <ItemGroup>
    <PackageReference Include="LavaGang.MelonLoader" Version="0.7.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)' == 'IL2CPP'">
    <TargetFramework>net6.0</TargetFramework>
    <DefineConstants>$(DefineConstants);IL2CPP</DefineConstants>
    <TargetName>Small_Corner_Map.Il2cpp</TargetName>
  </PropertyGroup>
  
  <PropertyGroup Condition="'$(Configuration)' == 'Mono'">
    <TargetFramework>netstandard2.1</TargetFramework>
    <DefineConstants>$(DefineConstants);Mono</DefineConstants>
    <TargetName>Small_Corner_Map.Mono</TargetName>
  </PropertyGroup>
  
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Condition="$(Configuration) == 'Mono'" Command="COPY &quot;$(TargetPath)&quot; &quot;D:\SteamLibrary\steamapps\common\Schedule I\Mods&quot;" />
    <Exec Condition="$(Configuration) == 'IL2CPP'" Command="COPY &quot;$(TargetPath)&quot; &quot;D:\SteamLibrary\steamapps\common\Schedule I - IL2CPP\Mods&quot;" />
  </Target>
</Project>